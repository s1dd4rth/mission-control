{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "checkJs": false,
        "paths": {
            "@theproductguy/agent-os-ui": [
                "../agent-os-ui/src/index.ts"
            ]
        }
    },
    "include": [
        "bin"
    ],
    "exclude": [
        "src",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}